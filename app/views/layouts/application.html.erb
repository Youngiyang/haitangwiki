<script type="text/javascript">
var wait=60;
function time(o) {
  if (wait == 0) {
      o.removeAttribute("disabled");
      o.value="免费获取验证码";
      wait = 60;
  } else {
      o.setAttribute("disabled", true);
      o.value="重新发送(" + wait + ")";
      wait--;
      setTimeout(function() {
          time(o)
      },
      1000)
  }
}
// document.getElementById("btn").onclick=function(){time(this);}
$('#btn').click(function(){
  // time(this);
  var mobile = document.getElementById("user_mobile")
  if (mobile.value==0){
    return false;
  }
  else{
    time(this);
    $.ajax({
      type: 'POST',
      url: '<%= send_code_path %>',
      data: {
        mobile: function(){
          return $("#user_mobile").val()
        }
      }
    })
  }
});
</script>

