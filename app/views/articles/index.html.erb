<%- model_class = Article -%>
<div class="page-header">
  <h1>文章列表</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:编号) %></th>
      <th><%= model_class.human_attribute_name(:标题) %></th>
      <th><%= model_class.human_attribute_name(:内容) %></th>
      <th><%= model_class.human_attribute_name(:图片) %></th>
      <th><%= model_class.human_attribute_name(:类别) %></th>
      <th><%= model_class.human_attribute_name(:创建时间) %></th>
      <th><%=t '.actions', :default => t("helpers.操作") %></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.id, article_path(article) %></td>
        <td><%= article.title %></td>
        <td><%= raw article.content %></td>
        <td><%= image_tag article.img, width: 100, height: 100 %></td>
        <td><%= article.categroy.try(:name) %></td>
        <td><%= article.created_at.strftime("%Y-%m-%d %H:%S:%M") %></td>
        <td>
          <%= link_to t('.编辑', :default => t("helpers.links.编辑")),
                      edit_article_path(article), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.删除', :default => t("helpers.links.删除")),
                      article_path(article),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.确定删除？", :default => '确定删除？')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.添加', :default => t("helpers.links.添加")),
            new_article_path,
            :class => 'btn btn-primary' %>
