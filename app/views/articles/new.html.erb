<div style="height:676px;">
  <div class=" am-g am-container nt-btnlist nt-add-wiki" style="margin-top:89px;">
    <div class="nt-wiki-top-button" style="margin-left: -123px;">
      <h3>添加百科</h3>
    </div>
    <%= form_for @article, :html => { :class => "am-form am-form-horizontal" } do |f| %>
      <div style="margin-left: -40px; margin-top:40px;">
        <div class="am-form-group am-u-sm-6 ">
          <label for="doc-ipt-3" class="am-u-sm-3 am-form-label">词条:</label>
          <div class="am-u-sm-9">
          <%= f.text_field :title, :id => 'doc-ipt-3' %>
          </div>
        </div>

        <div class="am-form-group am-u-sm-6">
          <label for="doc-ipt-3" class="am-u-sm-3 am-form-label">语气:</label>
          <div class="am-u-sm-9">
            <%= f.text_field :mood, :id => 'doc-ipt-3' %>
          </div>
        </div>
      </div>

      <div class="am-form-group am-u-sm-12">
        <label for="doc-ipt-pwd-2" class="am-u-sm-1 am-form-label">拼音:</label>
        <div class="am-u-sm-11">
          <%= f.text_field :spell, :id => 'doc-ipt-pwd-2' %>
        </div>
      </div>

      <div class="am-form-group am-u-sm-12">
        <label for="doc-ipt-pwd-2" class="am-u-sm-1 am-form-label">释义:</label>
        <div class="am-u-sm-11">
          <%= f.text_area :mean, rows: 5 %>
        </div>
      </div>

      <div class="am-form-group am-u-sm-12">
        <label for="doc-ipt-pwd-2" class="am-u-sm-1 am-form-label">例句:</label>
        <div class="am-u-sm-11">
          <%= f.text_area :example, rows: 5 %>
        </div>
      </div>
       <% if current_user && current_user.is_admin %>
      <div class="am-form-group am-u-sm-12">
        <label for="doc-ipt-pwd-2" class="am-u-sm-1 am-form-label">ID:</label>
        <div class="am-u-sm-11">
          <%= f.text_field :author, :id => 'doc-ipt-pwd-2' %>
        </div>
      </div>
      <% end %>



      <div class="am-form-group">
        <div class="nt-btn-submit" style="text-align: right; padding-right: 36px;">
          <a class="am-btn nt-btn-bad" href="#">放弃</a>
          <%= f.submit '提交', :class => 'am-btn nt-btn-good', style: "margin-left:25px;background-color: #fff" %>
        </div>
      </div>
   <% end %>
  </div>
</div>
