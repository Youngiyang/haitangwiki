<%- model_class = Categroy -%>
<div class="page-header">
  <h1>类别列表</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:编号) %></th>
      <th><%= model_class.human_attribute_name(:类别名称) %></th>
      <th><%= model_class.human_attribute_name(:创建实践) %></th>
      <th><%=t '.actions', :default => t("helpers.操作") %></th>
    </tr>
  </thead>
  <tbody>
    <% @categroys.each do |categroy| %>
      <tr>
        <td><%= link_to categroy.id, categroy_path(categroy) %></td>
        <td><%= categroy.name %></td>
        <td><%= categroy.created_at.strftime("%Y-%m-%d %H:%S:%M")  %></td>
        <td>
          <%= link_to t('.编辑', :default => t("helpers.links.编辑")),
                      edit_categroy_path(categroy), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.删除', :default => t("helpers.links.删除")),
                      categroy_path(categroy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.确定删除?", :default => '确定删除?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div>
      <%= link_to t('.添加', :default => t("helpers.links.添加")),
              new_categroy_path,
              :class => 'btn btn-primary' %>
  </div>

      <%= will_paginate @articles %>


