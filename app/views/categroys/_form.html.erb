<%= form_for @categroy, :html => { :class => "form-horizontal categroy" } do |f| %>

  <% if @categroy.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@categroy.errors.count, "error") %> prohibited this categroy from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @categroy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :类别名称, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <%= link_to t('.取消', :default => t("helpers.links.取消")),
                categroys_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
